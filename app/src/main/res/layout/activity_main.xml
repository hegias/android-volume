<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_plus"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:text="+"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/callMode_toggle"
        app:layout_constraintTop_toTopOf="@+id/callMode_toggle" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/button_plus"
        app:layout_constraintTop_toBottomOf="@+id/button_plus" />

    <ToggleButton
        android:id="@+id/musicMode_toggle"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:textOff="Music\nMode"
        android:textOn="Music\nMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/callMode_toggle"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:textOff="CALL\nMODE"
        android:textOn="CALL\nMODE"
        app:layout_constraintStart_toEndOf="@+id/musicMode_toggle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="145dp"
        android:layout_height="82dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Play Audiotrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectMusicStream_toggle" />

    <LinearLayout
        android:id="@+id/tableLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_play">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="AudioManager.getMode()" />

            <TextView
                android:id="@+id/modeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="AudioTrack usage" />

            <TextView
                android:id="@+id/usageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="AudioTrack content type" />

            <TextView
                android:id="@+id/contentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Volume buttons\ntarget stream" />

            <TextView
                android:id="@+id/targetStreamText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="STREAM_MUSIC vol" />

            <TextView
                android:id="@+id/streamMusicText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="STREAM_VOICE_CALL vol" />

            <TextView
                android:id="@+id/streamVoiceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="OnChange URI" />

            <TextView
                android:id="@+id/uriText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/selectMusicStream_toggle"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:textOff="STREAM\nMUSIC"
        android:textOn="STREAM\nMUSIC"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicMode_toggle" />

    <ToggleButton
        android:id="@+id/selectCallStream_toggle"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginStart="5dp"
        android:textOff="STREAM\nVOICE\nCALL"
        android:textOn="STREAM\nVOICE\nCALL"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/selectMusicStream_toggle"
        app:layout_constraintTop_toTopOf="@+id/selectMusicStream_toggle" />


</androidx.constraintlayout.widget.ConstraintLayout>